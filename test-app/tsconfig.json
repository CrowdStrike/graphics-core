{
  "extends": "@tsconfig/ember/tsconfig.json",
  "compilerOptions": {
    // --- Compilation/integration settings
    "noEmitOnError": false,

    "baseUrl": ".",
    "paths": {
      "test-app-for-graphics-core/tests/*": [
        "tests/*"
      ],
      "test-app-for-graphics-core/*": [
        "app/*"
      ],
      "*": [
        "types/*"
      ]
    }
  },
  "include": [
    "app/**/*",
    "tests/**/*",
    "types/**/*"
  ]
}
