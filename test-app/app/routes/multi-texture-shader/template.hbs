<div class='absolute top-0 w-full'>
  <div class='flex justify-center p-1'>
    <video autoplay muted loop id='video' src='assets/mountains.m4v'></video>
    <div class='flex'>
      <div>
        <input
          type='range'
          name='playback-rate'
          id='video-playback-rate'
          min='0.1'
          max='1'
          value='1'
          step='0.001'
        />
      </div>
      <button id='play-button' type='button'>
        <div class='text-white mx-4'>Play</div>
      </button>
      <button id='pause-button' type='button'>
        <div class='text-white'>Pause</div>
      </button>
    </div>
  </div>
</div>
<div {{this.demo}} class='flex'></div>